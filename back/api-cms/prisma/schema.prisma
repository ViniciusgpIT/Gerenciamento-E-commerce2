// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id           Int            @id @default(autoincrement())
  name         String
  type         StoreType
  fullAddress  String?
  openingHours String?
  active       Boolean        @default(true)
  stocks       StockByStore[]
  logs         AuditLog[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("stores")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String
  logs      AuditLog[]
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  slug        String  @unique
  parentId    Int?
  active      Boolean @default(true)

  // Self-relation for parent/child categories
  parent   Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children Category[] @relation("CategoryToCategory")

  products Product[]
  logs     AuditLog[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("categories")
}

model Product {
  id                  Int            @id @default(autoincrement())
  name                String
  detailedDescription String
  categoryId          Int
  category            Category       @relation(fields: [categoryId], references: [id])
  price               Float
  promotionalPrice    Float?
  sku                 String         @unique
  eanUpc              String?
  sizes               String[]
  colors              String[]
  images              String[]
  active              Boolean        @default(true)
  stocks              StockByStore[]
  logs                AuditLog[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("products")
}

// Junction table for stock by store
model StockByStore {
  productId Int
  storeId   Int
  quantity  Int @default(0)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@id([productId, storeId])
  @@map("stock_by_store")
}

model AuditLog {
  id     Int   @id @default(autoincrement())
  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  action     AuditAction
  entityType EntityType

  // IDs das entidades relacionadas (pode ser null para ações como login)
  entityId   Int? // ID da entidade principal (produto, categoria, etc.)
  storeId    Int? // Para logs específicos de loja
  productId  Int? // Para logs específicos de produto
  categoryId Int? // Para logs específicos de categoria

  // Relações opcionais para fácil acesso
  store    Store?    @relation(fields: [storeId], references: [id])
  product  Product?  @relation(fields: [productId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])

  // Dados da alteração
  details   Json? // Detalhes em JSON (dados antigos/novos, etc.)
  ipAddress String?
  userAgent String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([entityType])
  @@index([entityId])
  @@index([createdAt])
  @@index([action])
  @@map("audit_logs")
}

enum StoreType {
  FISICA
  ONLINE
}

enum AuditAction {
  LOGIN
  LOGOUT
  CREATE
  UPDATE
  DELETE
  ACTIVATE
  DEACTIVATE
  STOCK_UPDATE
  BULK_OPERATION
  SYSTEM
}

enum EntityType {
  USER
  PRODUCT
  CATEGORY
  STORE
  STOCK
  SYSTEM
}
